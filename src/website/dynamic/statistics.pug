extends layout.pug

block content
	.jumbotron.bg-dark.no-border-radius.text-light
		.container
			h2.display-3.lato-hairline Statistics
	.container
		center
			.d-flex.justify-content-around
				.p-2
					h2.lato-light Servers
					h4.lato-medium#servers #{stats.servers}
				.p-2
					h2.lato-light Users
					h4.lato-medium#users #{stats.users}
				.p-2
					h2.lato-light Channels
					h4.lato-medium#channels #{stats.channels}
			hr
			.d-flex.justify-content-around
				.p-2
					h2.lato-light Commands
					h4.lato-medium#commands #{stats.commands}
				.p-2
					h2.lato-light Uptime
					h4.lato-medium#uptime #{stats.uptime}

block scripts
	script(type="text/javascript" src="/guess-that-number/assets/js/statistics.js")
